#include <iostream>
#include <vector>
using namespace std;

int x = 0;
int minPieces(vector<int>& original, vector<int>& desired)
{
	int solancat = 0; //khai bao so lan cat 
	bool p = true;

	for (int i = 0; i < original.size(); i++)
	{
		p = true;
		for (int j = 0; j < original.size(); j++)
		{
			if (original[j] == desired[x])
			{
				do
				{
					j++;
					x++;
				} while (original[j] == desired[x]);
			solancat++;
			p = false;
			}
			if (p == false)
				break;
		}
		if (x == original.size())
			break;
	}
	return solancat;
}

int main()
{
	vector<int> original = { 7, 1, 2, 3 };
	vector<int> desired = { 1, 2, 3, 7 };
	cout << minPieces(original, desired) << endl;
	return 0;
}
